<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical"
    android:paddingTop="100dp"
    tools:context="tae.mobilelivebroadcast.MainActivity">


    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:id="@+id/float1"
        android:layout_height="wrap_content"
        float:fletPaddingBottom="5dp">

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/floatEdit1"
            android:layout_height="wrap_content"
            android:hint="ID" />

    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/float2"
        float:fletPaddingBottom="5dp">

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/floatEdit2"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/float1"
            android:hint="Password"
            android:inputType="textPassword" />

    </com.wrapp.floatlabelededittext.FloatLabeledEditText>


    <LinearLayout
        android:paddingTop="60dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="130dp">

        <info.hoang8f.widget.FButton
            fbutton:buttonColor="#708090"
            fbutton:shadowColor="#000000"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="10dp"
            fbutton:cornerRadius="5dp"
            android:id="@+id/fBtn1"
            android:text="Login"
            android:layout_width="100dp"
            android:layout_marginLeft="53dp"
            android:layout_marginStart="53dp"
            android:layout_height="50dp"/>

        <info.hoang8f.widget.FButton
            fbutton:buttonColor="#708090"
            fbutton:shadowColor="#000000"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="10dp"
            fbutton:cornerRadius="5dp"
            android:id="@+id/fBtn2"
            android:text="Register"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <com.facebook.login.widget.LoginButton
            android:id="@+id/facebook_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
             />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center_vertical|right"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
